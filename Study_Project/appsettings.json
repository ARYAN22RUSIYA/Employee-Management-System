{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "ConnectionStrings": {
        "Database": "server=//Your-Servername//;Database=//Database-name//;Trusted_Connection=SSPI;Encrypt=false;TrustServerCertificate=true;"
    },
    "Jwt": {
        "Key": "Unique-JWT-Key",
        "Issuer": "JWTAuthentication",
        "Audience": "CompanyEmployees",
        "Subject": "EmsAccessToken",
        "ExpiryMinutes": 10 // Token Expiry Time in Minutes
    },

    "Cors": {
        "AllowedOrigins": [ "http://localhost:4200" ] // Frontend App URL 
    },

    "RateLimiting": {
        "Limit": 100, // Number of requests
        "Period": "1m" // Time period in minutes
    },

    "IdentityOptions": {
        "Password": {
            "RequiredLength": 6,
            "RequireNonAlphanumeric": false,
            "RequireDigit": false,
            "RequireUppercase": false,
            "RequireLowercase": false
        }
    },

    "Serilog": {
        "WriteTo": [
            { "Name": "Console" },
            {
                "Name": "File",
                "Args": {
                    "path": "//Path to save log files//",
                    "rollingInterval": "Day" // Log file will be created daily
                }
            }
        ],
        "MinimumLevel": "Information"
    }
}
